<Window x:Class="ObjectEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ObjectEditor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate x:Key="Vector3Template" DataType="{x:Type local:Vector3Property}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Path=PropertyName}"></TextBlock>
                <Label>X</Label>
                <TextBlock Text="{Binding X}" VerticalAlignment="Center"></TextBlock>
                <Label>Y</Label>
                <TextBlock Text="{Binding Y}" VerticalAlignment="Center"></TextBlock>
                <Label>Z</Label>
                <TextBlock Text="{Binding Z}" VerticalAlignment="Center"></TextBlock>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="Vector2Template" DataType="{x:Type local:Vector2Property}">
            <StackPanel Orientation="Horizontal">
                <Label>X</Label>
                <TextBlock Text="{Binding X}" VerticalAlignment="Center"></TextBlock>
                <Label>Y</Label>
                <TextBlock Text="{Binding Y}" VerticalAlignment="Center"></TextBlock>
            </StackPanel>
        </DataTemplate>
        <local:ObjectPropertyDataTemplateSelector x:Key="myObjectPropertyDataTemplateSelector"></local:ObjectPropertyDataTemplateSelector>
    </Window.Resources>
    <Grid>
        <StackPanel>
            <ListBox Name="ObjPropList" ItemTemplateSelector="{StaticResource myObjectPropertyDataTemplateSelector}">
                
            </ListBox>
        </StackPanel>
    </Grid>
</Window>
