<Window x:Class="ObjectEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ObjectEditor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>

        <DataTemplate x:Key="FloatTemplate" DataType="{x:Type local:FloatProperty}">
            <StackPanel Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center" Text="{Binding Path=PropertyName}"></TextBlock>
                <TextBox Text="{Binding FloatValue}" VerticalAlignment="Center" Width="20" TextChanged="TextBoxBase_OnTextChanged"></TextBox>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="IntTemplate" DataType="{x:Type local:IntProperty}">
            <StackPanel Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center" Text="{Binding Path=PropertyName}"></TextBlock>
                <TextBox Text="{Binding IntValue}" VerticalAlignment="Center" Width="20"></TextBox>
            </StackPanel>
        </DataTemplate>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Style.Setters>
                <Setter Property="TextAlignment" Value="Right"/>
                <Setter Property="VerticalAlignment" Value="Center"></Setter>
            </Style.Setters>
        </Style>

        <DataTemplate x:Key="Vector3Template" DataType="{x:Type local:Vector3Property}">
            <StackPanel Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center" Text="{Binding Path=PropertyName}"></TextBlock>
                <Label>X</Label>
                <TextBox Text="{Binding X}" Style="{StaticResource TextBoxStyle}"></TextBox>
                <Label>Y</Label>
                <TextBox Text="{Binding Y}" Style="{StaticResource TextBoxStyle}"></TextBox>
                <Label>Z</Label>
                <TextBox Text="{Binding Z}" Style="{StaticResource TextBoxStyle}"></TextBox>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="Vector2Template" DataType="{x:Type local:Vector2Property}">
            <StackPanel Orientation="Horizontal">
                <Label>X</Label>
                <TextBox Text="{Binding X}" VerticalAlignment="Center"></TextBox>
                <Label>Y</Label>
                <TextBox Text="{Binding Y}" VerticalAlignment="Center"></TextBox>
            </StackPanel>
        </DataTemplate>
        <local:ObjectPropertyDataTemplateSelector x:Key="myObjectPropertyDataTemplateSelector"></local:ObjectPropertyDataTemplateSelector>
    </Window.Resources>
    <Grid>
        <StackPanel>
            <ListBox Name="ObjPropList" ItemTemplateSelector="{StaticResource myObjectPropertyDataTemplateSelector}">
                
            </ListBox>
        </StackPanel>
    </Grid>
</Window>
